console.log("<% @document.errors %>")
$('.invalid-feedback').html('');
$('.is-valid').removeClass('is-valid');
$('.is-invalid').removeClass('is-invalid');
<% @document.errors.messages.each do |attribute, messages| %>
  $('#document_<%= attribute %>').addClass('is-invalid ')
  $('.<%= attribute %>.invalid-feedback').html(
    "<%= messages.map { |message| "#{Document.human_attribute_name(attribute)} #{message}" }.join(', ') %>"
  );
<% end %>

<div id="documents-cards" >
  <div class="cards">
    <% if current_user.admin? %>
      <div class="card d-flex-default bg-grey">
        <%= link_to "+", new_admin_document_path, data: { turbo: false }, style: "font-size: 6rem", class: "font-weight-light btn-white-hover-red" %>
      </div>
    <% end %>
    <% unless documents.blank? %>
      <% documents.each do |document| %>
        <%= render 'card', document: document.decorate %>
      <% end %>
    <% end %>
  </div>
</div>

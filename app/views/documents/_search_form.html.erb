<div class="pb-5">
  <%= simple_form_for :search, url: documents_path, method: "get", data: { controller: "search" }, remote: true do |f| %>
    <div class="d-flex">
      <%= f.input :title, label: false, placeholder: "Votre recherche: titre du document, mots clÃ©s...", input_html: { data: { target: "search.title" } } %>
      <div class="btn">
        <i data-target="search.dropdownIcon" data-action="click->search#toggle" class="fas fa-lg fa-sort-down"></i>
      </div>
      <%= link_to documents_path, class: "btn", remote: true, 'data-action': "click->search#clearSearchValues" do %>
        <i class="fas fa-times"></i>
      <% end %>
      <%= button_tag :submit, class: "btn d-md-none" do %>
          <i class='fas fa-check'></i>
      <% end %>
    </div>
    <div class="d-flex align-items-center invisible" data-target="search.moreOptions">
      <%= f.input :format, as: :select, collection: Document::FORMATS.map { |k,v| [v,k] }, prompt: "Type de document", label: false, input_html: { data: { target: "search.format" } } %>
      <%= f.input :created_at, label: false, placeholder: "Date", input_html: { data: { target: "search.datesSelection" } } %>
      <%= f.input :language, as: :select, collection: Document::LANGUAGES.map { |k,v| [v,k] }, prompt: "Langue", label: false, input_html: { data: { target: "search.language" } } %>
      <%= button_tag :submit, class: "btn" do %>
          <i class='fas fa-check'></i>
      <% end %>
      <%#= f.submit "Rechercher", class: "btn" %>
    </div>
  <% end %>
</div>

<div class="container container-content d-flex flex-column">
  <div class="d-flex-default p-5">
    <%= image_tag "Logo_GileadMédia_Noir.png" %>
  </div>
  <div class="cards-devise">
    <div class="card-devise w-100 d-flex-default">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-100" }, data: { turbo: false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label: 'Identifiant',
                      input_html: {class: 'mb-3'} %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="d-flex">
          <div class="form-actions pr-3">
            <%= f.button :submit, "Valider" %>
          </div>
          <%= link_to "Réinitialisation", new_password_path(resource_name), class: "btn" %>
          <%#= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
    <div class="card-devise card-devise-illustration">
      <%= image_tag "photo_gilead.jpg" %>
    </div>
  </div>
</div>
